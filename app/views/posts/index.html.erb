<div class="contents row">
  <% @posts.each do |post| %>
    <div class="more">
      <ul class="more_list">
        <li>
          <%= link_to '削除', post_path(post.id), method: :delete %>
        </li>
      </ul>
    </div>
    <p><%= post.text %></p>
    <span class="name">
      <%= post.name %>
    </span>
  <% end %>
</div>